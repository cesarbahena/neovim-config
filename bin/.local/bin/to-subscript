#!/usr/bin/env bash
# to-subscript

# Map digits to subscript (including subscript dot)
declare -A sub=(
  ["0"]="₀" ["1"]="₁" ["2"]="₂" ["3"]="₃" ["4"]="₄"
  ["5"]="₅" ["6"]="₆" ["7"]="₇" ["8"]="₈" ["9"]="₉" ["." ]="·"
)

# Read version: first argument or stdin
if [ -n "$1" ]; then
  input="$1"
else
  read -r input
fi

output=""
for (( i=0; i<${#input}; i++ )); do
  char="${input:i:1}"
  output+="${sub[$char]:-$char}"   # leave other chars unchanged
done

echo "$output"
